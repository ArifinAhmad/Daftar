<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardview_compat_inset_shadow"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="#fff"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/blue_background">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/dokter1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txNamaDokter"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Nama Dokter"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txNamaPoli"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Nama Poli"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/jammulai"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Jam Mulai"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/jamSelesai"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Jam Selesai"/>





        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>